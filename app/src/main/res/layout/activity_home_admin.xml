<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="0dp"
    android:layout_marginEnd="0dp"
    android:layout_marginVertical="0dp"
    android:background="#FFFFFF"
    app:cardElevation="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@color/gradStart"
            android:gravity="center_vertical"
            android:weightSum="6">

            <!-- User Avatar -->
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imgAvt"
                android:src="@drawable/ic_avt"
                android:layout_marginEnd="20dp"
                android:contentDescription="User Avatar"
                android:layout_weight="1" />

            <!-- User Name -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Name"
                android:id="@+id/tvTenTK"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_weight="4"
                android:gravity="center"/>

            <!-- Logout Button -->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng xuất"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:backgroundTint="#fff"
                android:padding="0dp"
                android:layout_weight="1"
                android:onClick="onLogoutClick" />

        </LinearLayout>


        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">



            <!-- Layout 1 -->
            <LinearLayout
                android:id="@+id/qlUser"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/border_shadow"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="10dp">
                <ImageView
                    android:src="@drawable/anh_user"
                    android:layout_width="90dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="90dp" />
                <TextView
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quản lý người dùng"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    android:gravity="center_vertical" />
            </LinearLayout>

            <!-- Layout 2 -->
            <LinearLayout
                android:id="@+id/qlPhong"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/border_shadow"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="10dp">
                <ImageView
                    android:src="@drawable/anh_phong"
                    android:layout_width="90dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="90dp" />
                <TextView
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quản lý phòng"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    android:gravity="center_vertical" />
            </LinearLayout>

            <!-- Layout 3 -->
            <LinearLayout
                android:id="@+id/qlMa"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/border_shadow"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="10dp">
                <ImageView
                    android:src="@drawable/anh_ma_giam_gia"
                    android:layout_width="90dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="90dp" />
                <TextView
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quản lý ưu đãi"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    android:gravity="center_vertical" />
            </LinearLayout>

            <!-- Layout 4 -->
            <LinearLayout
                android:id="@+id/qlDon"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/border_shadow"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="10dp">
                <ImageView
                    android:src="@drawable/anh_don"
                    android:layout_width="90dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="90dp" />
                <TextView
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quản lý đặt phòng"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    android:gravity="center_vertical" />
            </LinearLayout>

            <!-- Layout 5 -->
            <LinearLayout
                android:id="@+id/qlDanhGia"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/border_shadow"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="10dp">
                <ImageView
                    android:src="@drawable/anh_danh_gia"
                    android:layout_marginLeft="10dp"
                    android:layout_width="90dp"
                    android:layout_height="90dp" />
                <TextView
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quản lý đánh giá"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    android:gravity="center_vertical" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
