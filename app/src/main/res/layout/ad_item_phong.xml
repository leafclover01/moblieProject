<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_shadow"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <TextView
            android:paddingLeft="5dp"
            android:padding="10dp"
            android:text="tên"
            android:textSize="30dp"
            android:textColor="#2F204A"
            android:background="@drawable/ad_rounded_textview"
            android:id="@+id/ad_phong_ten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            tools:ignore="MissingConstraints">
            <ImageView
                android:layout_marginLeft="5dp"
                android:src="@drawable/ad_anh_clone_phong"

                android:id="@+id/rtImg"
                android:layout_width="160dp"
                android:layout_height="120dp"/>
            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:textColor="#1F2517"
                    android:textSize="20dp"
                    android:id="@+id/ad_gia_sl"
                    android:text="giá / số lượng tối đa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:maxLength="100"
                    android:textColor="@color/red20"
                    android:id="@+id/ad_mo_ta"
                    android:textSize="20dp"
                    android:text="mô tả"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:id="@+id/ad_btnDetal"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#0288D1"
                        android:text="Chi tiết"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:id="@+id/ad_btnFix"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#0288D1"
                        android:text="Sửa"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>