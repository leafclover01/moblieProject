<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="10dp"
    android:background="@color/light"
    android:layout_marginEnd="10dp">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:background="@drawable/border_shadow"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="10dp"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/ad_img1"
            android:src="@drawable/anh_user"
            android:layout_width="90dp"
            android:layout_marginLeft="5dp"
            android:layout_height="90dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="3"
                android:id="@+id/ad_tv1"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#222250"
                android:textSize="22sp" />
            <TextView
                android:text="3"
                android:id="@+id/ad_tv2"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#25152C"
                android:textSize="17sp" />
            <TextView
                android:text="3"
                android:id="@+id/ad_tv3"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#101D22"
                android:textSize="17sp"/>
            <LinearLayout
                android:layout_marginLeft="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:text="Sửa"
                    android:id="@+id/ad_btnEdit"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#0288D1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/ad_btnDel"
                    android:layout_marginLeft="20dp"
                    android:text="Xóa"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#0288D1"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>