<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="200dp"
        android:weightSum="7"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_shadow"
        android:gravity="center"
        tools:ignore="MissingConstraints">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/survey640"
            android:layout_weight="5"
            android:id="@+id/imgAvt"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2"
            >
            <TextView
                android:id="@+id/tvLoaiPhong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Loại phòng:"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPhong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:text="Chất lượng phòng:"
                android:textColor="#605be5"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvSachSe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:text="Sạch sẽ:"
                android:textColor="#605be5"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvNhanVien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:text="Nhân viên phục vụ:"
                android:textColor="#605be5"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvTienNghi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:text="Tiện nghi:"
                android:textColor="#605be5"
                android:textSize="20sp"
                android:textStyle="bold" />


        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>