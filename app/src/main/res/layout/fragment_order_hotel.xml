<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"> <!-- Màu nền nhã nhặn -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/hotelImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/anhkhachsan"
            android:scaleType="centerCrop"
            android:contentDescription="Ảnh khách sạn" />

        <TextView
            android:id="@+id/hotelName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Khách Sạn ABC Luxury"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <!-- Vị trí -->
        <TextView
            android:id="@+id/hotelLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="📍 Vị trí: 123 Đường XYZ, TP. Hồ Chí Minh"
            android:textSize="16sp"
            android:textColor="#444444"
            android:padding="16dp"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:layout_marginBottom="8dp" />

        <!-- Giới thiệu -->
        <TextView
            android:id="@+id/hotelDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="🌟 Giới thiệu:\nKhách sạn ABC Luxury mang đến không gian nghỉ dưỡng lý tưởng, với thiết kế hiện đại, tiện nghi cao cấp và dịch vụ tận tâm. Tại đây, bạn sẽ cảm nhận được sự khác biệt trong từng chi tiết, từ phòng nghỉ sang trọng đến những dịch vụ cao cấp như spa, hồ bơi và nhà hàng đạt chuẩn 5 sao."
            android:textSize="16sp"
            android:background="#FFFFFF"
            android:textColor="#333333"
            android:elevation="2dp"
            android:layout_marginBottom="16dp" />

        <!-- Dịch vụ -->
        <TextView
            android:id="@+id/hotelServicesTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="🛎️ Dịch vụ tại khách sạn:"
            android:padding="16dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#007BFF"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/hotelServices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="- Hồ bơi vô cực với tầm nhìn thành phố\n- Nhà hàng cao cấp chuyên món Âu - Á\n- Spa thư giãn với liệu trình đặc biệt\n- Phòng gym hiện đại với huấn luyện viên riêng\n- Quầy bar sang trọng với nhiều loại cocktail độc đáo"
            android:textSize="16sp"
            android:padding="16dp"
            android:background="#FFFFFF"
            android:textColor="#444444"
            android:elevation="2dp"
            android:layout_marginBottom="16dp" />

        <!-- Các địa điểm nổi bật -->
        <TextView
            android:id="@+id/highlightedPlacesTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="🏞️ Địa điểm nổi bật gần khách sạn:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#007BFF"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/highlightedPlaces"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:elevation="2dp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>
