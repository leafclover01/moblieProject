<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    app:cardCornerRadius="12dp"

    app:cardElevation="4dp">

    <!-- LinearLayout chứa toàn bộ nội dung với màu nền -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@drawable/border_shadow">

        <!-- ImageView bên trái -->
        <ImageView
            android:layout_width="75dp"
            android:layout_height="76dp"
            android:src="@drawable/anh_ma_giam_gia"
            android:layout_marginEnd="10dp" />

        <!-- LinearLayout chứa TextView -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvMaGiamGia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100001"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/red30" />

            <TextView
                android:id="@+id/tvTenMaGG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giảm giá 20%"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/brandBlue30" />

            <TextView
                android:id="@+id/tvGiamGia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20%"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/brandOrange30" />

            <TextView
                android:id="@+id/tvTrangThai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hết Hạn"
                android:textSize="10sp"
                android:textStyle="bold|italic"
                android:textColor="@color/red60" />
        </LinearLayout>

        <!-- LinearLayout chứa icon -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Icon chỉnh sửa -->
            <ImageView
                android:id="@+id/ivEdit"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/edit_ma_giam_gia"
                android:layout_marginBottom="8dp"
                android:contentDescription="Edit Icon" />

            <!--  Sao chép mã giảm giá-->
            <ImageView
                android:id="@+id/ivCopy"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/qlyma_copy"
                android:layout_marginBottom="8dp"
                android:contentDescription="Edit Icon" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
