<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="250dp"
        android:weightSum="4"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_shadow"
        android:gravity="center"
        tools:ignore="MissingConstraints">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/survey640"
            android:layout_weight="1"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="3"
            >
            <TextView
                android:id="@+id/tvMaDon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:text="Mã đơn:"
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:text="Ngày gửi:"
                android:textColor="#605be5"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvPhong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:text="Đánh giá chất lượng phòng:"
                android:textColor="#605be5"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvSachSe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:text="Đánh giá sạch sẽ:"
                android:textColor="#605be5"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvNhanVien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:text="Đánh giá nhân viên phục vụ:"
                android:textColor="#605be5"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvTienNghi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:text="Đánh giá tiện nghi:"
                android:textColor="#605be5"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvChiTiet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:text="Chi tiết:"
                android:textColor="#605be5"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>